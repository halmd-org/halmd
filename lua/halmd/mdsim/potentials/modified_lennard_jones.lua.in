local device            = require("halmd.device")
local module            = require("halmd.utility.module")
local mdsim = {
    particle            = require("halmd.mdsim.particle")
}

-- grab C++ wrappers
local modified_lennard_jones_wrapper = {
    host = libhalmd.mdsim.host.potentials.modified_lennard_jones
}
if libhalmd.mdsim.gpu then
    modified_lennard_jones_wrapper.gpu = libhalmd.mdsim.gpu.potentials.modified_lennard_jones
end
local h5 = libhalmd.h5
local po = libhalmd.po
-- grab standard library
local assert = assert

local M = module("halmd.mdsim.potentials.modified_lennard_jones")

local fixed_array = {__index = function() return 0 end}

--
-- construct modified Lennard-Jones module
--
function M.__new(args)
    local cutoff  = setmetatable(args.cutoff           or {2.5, 2.5, 2.5 }, fixed_array) -- default value
    local epsilon = setmetatable(args.epsilon          or {1.0, 1.5, 0.5 }, fixed_array) -- default value
    local sigma   = setmetatable(args.sigma            or {1.0, 0.8, 0.88}, fixed_array) -- default value
    local index_m = setmetatable(args.index_repulsion  or {12 , 12 , 12  }, fixed_array) -- default value
    local index_n = setmetatable(args.index_attraction or {6  , 6  , 6   }, fixed_array) -- default value
    local smooth  = args.smooth or 0 -- default value

    local particle = mdsim.particle() -- singleton
    local logger = assert(args.logger)

    local potential
    -- select optimised GPU version if 1 species and ε=1, σ=1
    local modified_lennard_jones = assert(modified_lennard_jones_wrapper[device() and "gpu" or "host"])
    potential = modified_lennard_jones(particle.ntype, cutoff, epsilon, sigma, index_m, index_n, logger)

    -- store smooth parameter as property of potential
    potential.smooth = property(function(self) return smooth end)

    return potential
end

--
-- returns module description
--
function M.description()
    return "modified Lennard-Jones potential"
end

--
-- assemble module options
--
-- @param desc po.options_description
--
function M.options(desc)
    desc:add("cutoff", po.float_array(), "truncate potential at cutoff radius")
    desc:add("epsilon", po.float_array(), "potential well depths")
    desc:add("sigma", po.float_array(), "collision diameters")
    desc:add("index-repulsion", po.uint_array(), "power law index of repulsion")
    desc:add("index-attraction", po.uint_array(), "power law index of attraction")
    desc:add("smooth", po.float(), "smoothing parameter for C²-continuous cutoff")
end

--
-- read module parameters from HDF5 group
--
function M.read_parameters(args, group)
    args.cutoff = group:read_attribute("cutoff", h5.float_array())
    args.epsilon = group:read_attribute("epsilon", h5.float_array())
    args.sigma = group:read_attribute("sigma", h5.float_array())
    args.index_repulsion = group:read_attribute("index_repulsion", h5.uint_array())
    args.index_attraction = group:read_attribute("index_attraction", h5.uint_array())
    args.smooth = group:read_attribute("smooth", h5.float())
end

--
-- write module parameters to HDF5 group
--
-- @param modified_lennard_jones module instance
-- @param group HDF5 group
--
function M.write_parameters(modified_lennard_jones, group)
    group:write_attribute("cutoff", h5.float_array(), modified_lennard_jones.r_cut_sigma:data())
    group:write_attribute("epsilon", h5.float_array(), modified_lennard_jones.epsilon:data())
    group:write_attribute("sigma", h5.float_array(), modified_lennard_jones.sigma:data())
    group:write_attribute("index_repulsion", h5.uint_array(), modified_lennard_jones.index_m:data())
    group:write_attribute("index_attraction", h5.uint_array(), modified_lennard_jones.index_n:data())
    group:write_attribute("smooth", h5.float(), modified_lennard_jones.smooth)
end

return M
